                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/seat_view_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/selector_seat"
                            android:gravity="center"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/seat_view_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/selector_seat"
                            android:gravity="center"
                            android:textSize="22sp" />

                        <TextView
